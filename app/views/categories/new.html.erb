<div class="d-flex flex-column gap-4 w-25 mx-auto my-5">
  <div>
    <div class="blog-title">
      <%= simple_form_for @category do |f| %>
          <%= f.input :name, label: "Enter the name of the Cookbook" %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Add a Cookbook", class: "btn btn-flat" %>
      <% end %>
    </div>
    <%= link_to "Cancel", root_path, class: "btn btn-secondary mt-2", style: "color: white; width: 178px; border-radius: 4px;" %>
  </div>
</div>
